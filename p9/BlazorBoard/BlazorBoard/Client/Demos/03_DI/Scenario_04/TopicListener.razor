@inherits MessengerAwareBase

<div class="topic-listener">
    <h3>Topic: @Topic</h3>
    <h2>@_messageText</h2>
</div>

@code {
    [Parameter]
    public string Topic { get; set; }

    private string _messageText = "<No message received yet>";

    protected override void OnMessage(Message msg)
    {
        if (msg.Topic == Topic || Topic.ToLower() == "all")
        {
            _messageText = msg.Text;
            StateHasChanged();
        }
    }
}
